<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.TitleMini">
        <item name="android:textSize">@dimen/title_mini_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.MyBaseField">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="boxStrokeColor">@color/main_purple</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MyButton">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="backgroundTint">@color/main_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">11dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Base.Widget.MaterialComponents.TextView.BaseText">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="Widget.MaterialComponents.CardView.MyCard">
        <item name="cardBackgroundColor">@color/light_purple</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="strokeColor">@color/light_purple</item>
        <item name="cardElevation">5dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="Base.Widget.AppCompat.Spinner.MySpinner">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="boxStrokeColor">@color/main_purple</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>


</resources>